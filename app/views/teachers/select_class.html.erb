<!-- app/views/teachers/select_class.html.erb -->
<% provide(:title, '登録クラス選択ページ') %>


<div class="select-class-page">
  <h1 class="page-title">登録児童一覧 クラス選択</h1>
  <%= link_to 'さいしょに もどる', authenticated_root_path, class: 'back-link button-link' %>

  <ul class="class-list">
    <% @grade_classes.each do |grade_class| %>
      <li>
        <%= link_to "#{grade_class.grade}年#{grade_class.class_num}組", student_list_path(grade_class), class: 'class-link' %>
      </li>
    <% end %>
  </ul>
</div>
